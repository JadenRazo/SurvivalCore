+package net.survivalcore.config;
+
+import java.util.logging.Logger;
+
+/**
+ * Validates configuration values to ensure they are within acceptable bounds
+ * and relationships between values are logically consistent.
+ *
+ * Called from SurvivalCoreConfig after loading values to clamp out-of-range
+ * values and warn about configuration errors.
+ */
+public final class ConfigValidator {
+
+    private static final Logger LOGGER = Logger.getLogger("SurvivalCore");
+
+    private ConfigValidator() {}
+
+    /**
+     * Clamp an integer value to a range, logging a warning if clamping occurs.
+     *
+     * @param path config path (for logging)
+     * @param value the value to validate
+     * @param min minimum allowed value (inclusive)
+     * @param max maximum allowed value (inclusive)
+     * @return clamped value
+     */
+    public static int clampInt(String path, int value, int min, int max) {
+        if (value < min) {
+            LOGGER.warning("Config value '" + path + "' = " + value + " is below minimum " + min + ", clamping to " + min);
+            return min;
+        }
+        if (value > max) {
+            LOGGER.warning("Config value '" + path + "' = " + value + " is above maximum " + max + ", clamping to " + max);
+            return max;
+        }
+        return value;
+    }
+
+    /**
+     * Clamp a double value to a range, logging a warning if clamping occurs.
+     *
+     * @param path config path (for logging)
+     * @param value the value to validate
+     * @param min minimum allowed value (inclusive)
+     * @param max maximum allowed value (inclusive)
+     * @return clamped value
+     */
+    public static double clampDouble(String path, double value, double min, double max) {
+        if (value < min) {
+            LOGGER.warning("Config value '" + path + "' = " + value + " is below minimum " + min + ", clamping to " + min);
+            return min;
+        }
+        if (value > max) {
+            LOGGER.warning("Config value '" + path + "' = " + value + " is above maximum " + max + ", clamping to " + max);
+            return max;
+        }
+        return value;
+    }
+
+    /**
+     * Validate that a lower value is strictly less than an upper value.
+     * Logs a warning if the relationship is violated but does not modify values.
+     *
+     * @param name descriptive name for the relationship (e.g., "farm thresholds")
+     * @param lower the lower bound value
+     * @param upper the upper bound value
+     * @param lowerPath config path for lower value
+     * @param upperPath config path for upper value
+     */
+    public static void validateRelationship(String name, int lower, int upper, String lowerPath, String upperPath) {
+        if (lower >= upper) {
+            LOGGER.warning("Config relationship violation: " + name + " - '" + lowerPath + "' (" + lower + ") must be less than '" + upperPath + "' (" + upper + ")");
+        }
+    }
+
+    /**
+     * Validate that a lower value is strictly less than an upper value (double version).
+     *
+     * @param name descriptive name for the relationship
+     * @param lower the lower bound value
+     * @param upper the upper bound value
+     * @param lowerPath config path for lower value
+     * @param upperPath config path for upper value
+     */
+    public static void validateRelationship(String name, double lower, double upper, String lowerPath, String upperPath) {
+        if (lower >= upper) {
+            LOGGER.warning("Config relationship violation: " + name + " - '" + lowerPath + "' (" + lower + ") must be less than '" + upperPath + "' (" + upper + ")");
+        }
+    }
+
+    /**
+     * Validate three-tier threshold relationship (soft < hard < critical).
+     *
+     * @param name descriptive name (e.g., "farm detection")
+     * @param soft soft threshold
+     * @param hard hard threshold
+     * @param critical critical threshold
+     * @param softPath config path for soft threshold
+     * @param hardPath config path for hard threshold
+     * @param criticalPath config path for critical threshold
+     */
+    public static void validateThreeTierThresholds(String name, int soft, int hard, int critical,
+            String softPath, String hardPath, String criticalPath) {
+        if (soft >= hard) {
+            LOGGER.warning("Config relationship violation: " + name + " - '" + softPath + "' (" + soft + ") must be less than '" + hardPath + "' (" + hard + ")");
+        }
+        if (hard >= critical) {
+            LOGGER.warning("Config relationship violation: " + name + " - '" + hardPath + "' (" + hard + ") must be less than '" + criticalPath + "' (" + critical + ")");
+        }
+        if (soft >= critical) {
+            LOGGER.warning("Config relationship violation: " + name + " - '" + softPath + "' (" + soft + ") must be less than '" + criticalPath + "' (" + critical + ")");
+        }
+    }
+
+    /**
+     * Ensure a value is positive, logging a warning if it's not.
+     *
+     * @param path config path
+     * @param value the value to check
+     * @return the value if positive, or 1 if it was <= 0
+     */
+    public static int ensurePositive(String path, int value) {
+        if (value <= 0) {
+            LOGGER.warning("Config value '" + path + "' = " + value + " must be positive, defaulting to 1");
+            return 1;
+        }
+        return value;
+    }
+
+    /**
+     * Ensure a value is positive (double version).
+     *
+     * @param path config path
+     * @param value the value to check
+     * @return the value if positive, or 0.1 if it was <= 0
+     */
+    public static double ensurePositive(String path, double value) {
+        if (value <= 0.0) {
+            LOGGER.warning("Config value '" + path + "' = " + value + " must be positive, defaulting to 0.1");
+            return 0.1;
+        }
+        return value;
+    }
+
+    /**
+     * Ensure a value is non-negative (>= 0), used for thread counts.
+     *
+     * @param path config path
+     * @param value the value to check
+     * @return the value if >= 0, or 0 if negative
+     */
+    public static int ensureNonNegative(String path, int value) {
+        if (value < 0) {
+            LOGGER.warning("Config value '" + path + "' = " + value + " cannot be negative, defaulting to 0");
+            return 0;
+        }
+        return value;
+    }
+}
