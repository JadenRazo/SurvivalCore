+package net.survivalcore.config;
+
+import java.nio.file.Path;
+import java.util.Set;
+import java.util.concurrent.ConcurrentHashMap;
+import java.util.logging.Logger;
+
+/**
+ * Manages per-world configuration instances.
+ *
+ * Lazy-loads WorldConfig for each world on first access.
+ * Thread-safe via ConcurrentHashMap.
+ */
+public final class WorldConfigManager {
+    private static final Logger LOGGER = Logger.getLogger("SurvivalCore");
+    private static WorldConfigManager instance;
+
+    private final Path serverRoot;
+    private final ConcurrentHashMap<String, WorldConfig> worldConfigs = new ConcurrentHashMap<>();
+
+    private WorldConfigManager(Path serverRoot) {
+        this.serverRoot = serverRoot;
+    }
+
+    /**
+     * Initialize the world config manager.
+     * Must be called before any calls to get().
+     */
+    public static void init(Path serverRoot) {
+        if (instance != null) {
+            LOGGER.warning("WorldConfigManager already initialized, skipping");
+            return;
+        }
+
+        instance = new WorldConfigManager(serverRoot);
+        LOGGER.info("WorldConfigManager initialized");
+    }
+
+    /**
+     * Get the singleton instance.
+     */
+    public static WorldConfigManager get() {
+        if (instance == null) {
+            throw new IllegalStateException("WorldConfigManager not initialized");
+        }
+        return instance;
+    }
+
+    /**
+     * Get or load the world config for the given world name.
+     * Thread-safe and lazy-loads on first access.
+     */
+    public WorldConfig getWorldConfig(String worldName) {
+        return worldConfigs.computeIfAbsent(worldName, name -> new WorldConfig(name, serverRoot));
+    }
+
+    /**
+     * Clear all cached world configs, forcing reload on next access.
+     */
+    public void reload() {
+        worldConfigs.clear();
+        LOGGER.info("Cleared world config cache");
+    }
+
+    public Set<String> getLoadedWorlds() {
+        return Set.copyOf(worldConfigs.keySet());
+    }
+}
