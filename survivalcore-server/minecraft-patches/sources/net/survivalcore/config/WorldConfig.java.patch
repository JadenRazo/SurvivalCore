+package net.survivalcore.config;
+
+import java.io.IOException;
+import java.nio.file.Files;
+import java.nio.file.Path;
+import java.util.logging.Level;
+import java.util.logging.Logger;
+import org.spongepowered.configurate.CommentedConfigurationNode;
+import org.spongepowered.configurate.yaml.NodeStyle;
+import org.spongepowered.configurate.yaml.YamlConfigurationLoader;
+
+/**
+ * Per-world configuration overlay.
+ *
+ * Loads config/survivalcore-world-<name>.yml and overrides
+ * specific values from the global config for that world.
+ * Any value not specified in the world config falls through
+ * to the global config.
+ *
+ * Lazy-loaded on first access per world.
+ */
+public final class WorldConfig {
+    private static final Logger LOGGER = Logger.getLogger("SurvivalCore");
+
+    private final String worldName;
+    private final CommentedConfigurationNode root;
+    private final SurvivalCoreConfig globalConfig;
+
+    WorldConfig(String worldName, Path serverRoot) {
+        this.worldName = worldName;
+        this.globalConfig = SurvivalCoreConfig.get();
+
+        Path configPath = serverRoot.resolve("config").resolve("survivalcore-world-" + worldName + ".yml");
+
+        YamlConfigurationLoader loader = YamlConfigurationLoader.builder()
+            .path(configPath)
+            .nodeStyle(NodeStyle.BLOCK)
+            .build();
+
+        CommentedConfigurationNode loadedRoot;
+        try {
+            if (Files.exists(configPath)) {
+                loadedRoot = loader.load();
+                LOGGER.info("Loaded world config for: " + worldName);
+            } else {
+                loadedRoot = loader.createNode();
+                LOGGER.fine("No world config found for " + worldName + ", using global defaults");
+            }
+        } catch (IOException e) {
+            LOGGER.log(Level.WARNING, "Failed to load world config for " + worldName, e);
+            loadedRoot = loader.createNode();
+        }
+
+        this.root = loadedRoot;
+    }
+
+    /**
+     * Get a boolean value, falling back to global config if not set in world config.
+     */
+    public boolean getBoolean(String... path) {
+        CommentedConfigurationNode node = root.node((Object[]) path);
+        if (!node.virtual()) {
+            return node.getBoolean();
+        }
+
+        // Fall back to global config
+        return globalConfig.root.node((Object[]) path).getBoolean();
+    }
+
+    /**
+     * Get an integer value, falling back to global config if not set in world config.
+     */
+    public int getInt(String... path) {
+        CommentedConfigurationNode node = root.node((Object[]) path);
+        if (!node.virtual()) {
+            return node.getInt();
+        }
+
+        // Fall back to global config
+        return globalConfig.root.node((Object[]) path).getInt();
+    }
+
+    /**
+     * Get a double value, falling back to global config if not set in world config.
+     */
+    public double getDouble(String... path) {
+        CommentedConfigurationNode node = root.node((Object[]) path);
+        if (!node.virtual()) {
+            return node.getDouble();
+        }
+
+        // Fall back to global config
+        return globalConfig.root.node((Object[]) path).getDouble();
+    }
+
+    /**
+     * Get a string value, falling back to global config if not set in world config.
+     */
+    public String getString(String... path) {
+        CommentedConfigurationNode node = root.node((Object[]) path);
+        if (!node.virtual()) {
+            return node.getString();
+        }
+
+        // Fall back to global config
+        return globalConfig.root.node((Object[]) path).getString();
+    }
+
+    /**
+     * Check if this world config explicitly overrides the given path.
+     */
+    public boolean isOverridden(String... path) {
+        return !root.node((Object[]) path).virtual();
+    }
+
+    // ==================== Convenience Methods for Common Config Paths ====================
+
+    public boolean isFarmDetectionEnabled() {
+        if (isOverridden("performance", "farm-detection", "enabled")) {
+            return getBoolean("performance", "farm-detection", "enabled");
+        }
+        return globalConfig.farmDetectionEnabled;
+    }
+
+    public int getFarmSoftThreshold() {
+        if (isOverridden("performance", "farm-detection", "soft-threshold")) {
+            return getInt("performance", "farm-detection", "soft-threshold");
+        }
+        return globalConfig.farmSoftThreshold;
+    }
+
+    public int getFarmHardThreshold() {
+        if (isOverridden("performance", "farm-detection", "hard-threshold")) {
+            return getInt("performance", "farm-detection", "hard-threshold");
+        }
+        return globalConfig.farmHardThreshold;
+    }
+
+    public int getFarmCriticalThreshold() {
+        if (isOverridden("performance", "farm-detection", "critical-threshold")) {
+            return getInt("performance", "farm-detection", "critical-threshold");
+        }
+        return globalConfig.farmCriticalThreshold;
+    }
+
+    public boolean isEntityCleanupEnabled() {
+        if (isOverridden("survival", "entity-cleanup", "enabled")) {
+            return getBoolean("survival", "entity-cleanup", "enabled");
+        }
+        return globalConfig.entityCleanupEnabled;
+    }
+
+    public int getEntityCleanupSoftLimit() {
+        if (isOverridden("survival", "entity-cleanup", "soft-limit")) {
+            return getInt("survival", "entity-cleanup", "soft-limit");
+        }
+        return globalConfig.entityCleanupSoftLimit;
+    }
+
+    public int getEntityCleanupHardLimit() {
+        if (isOverridden("survival", "entity-cleanup", "hard-limit")) {
+            return getInt("survival", "entity-cleanup", "hard-limit");
+        }
+        return globalConfig.entityCleanupHardLimit;
+    }
+
+    public boolean isEntityBudgetsEnabled() {
+        if (isOverridden("performance", "entity-budgets", "enabled")) {
+            return getBoolean("performance", "entity-budgets", "enabled");
+        }
+        return globalConfig.entityBudgetsEnabled;
+    }
+
+    public int getEntityBudgetsMaxEntityTimeMs() {
+        if (isOverridden("performance", "entity-budgets", "max-entity-time-ms")) {
+            return getInt("performance", "entity-budgets", "max-entity-time-ms");
+        }
+        return globalConfig.entityBudgetsMaxEntityTimeMs;
+    }
+
+    public String getWorldName() {
+        return worldName;
+    }
+
+    public SurvivalCoreConfig getGlobalConfig() {
+        return globalConfig;
+    }
+}
