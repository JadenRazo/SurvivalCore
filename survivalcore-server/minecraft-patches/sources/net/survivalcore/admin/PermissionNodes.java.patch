+package net.survivalcore.admin;
+
+/**
+ * Permission node constants for SurvivalCore commands.
+ *
+ * All permission nodes default to OP only via PermissionDefault.OP.
+ * Server admins can override these in their permission plugin.
+ */
+public final class PermissionNodes {
+
+    /** Base permission node for all SurvivalCore commands */
+    public static final String BASE = "survivalcore.command";
+
+    /** Permission for /survivalcore monitor */
+    public static final String MONITOR = BASE + ".monitor";
+
+    /** Permission for /survivalcore preset */
+    public static final String PRESET = BASE + ".preset";
+
+    /** Permission for /survivalcore reload */
+    public static final String RELOAD = BASE + ".reload";
+
+    /** Permission for /survivalcore version (always allowed) */
+    public static final String VERSION = BASE + ".version";
+
+    /** Permission for /survivalcore profile */
+    public static final String PROFILE = BASE + ".profile";
+
+    /** Permission for /survivalcore lagspike */
+    public static final String LAGSPIKE = BASE + ".lagspike";
+
+    /** Permission for /survivalcore entity */
+    public static final String ENTITY = BASE + ".entity";
+
+    /** Permission for /survivalcore chunks */
+    public static final String CHUNKS = BASE + ".chunks";
+
+    /** Permission for /survivalcore entities */
+    public static final String ENTITIES = BASE + ".entities";
+
+    private PermissionNodes() {}
+}
