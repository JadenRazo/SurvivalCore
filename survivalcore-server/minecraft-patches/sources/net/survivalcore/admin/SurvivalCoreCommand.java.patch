+    /**
+     * Execute /survivalcore monitor [tps|entities|farms|threads]
+     */
+    private boolean executeMonitor(final CommandSender sender, final String[] args) {
+        final String monitorSubcommand = args.length > 1 ? args[1] : null;
+
+        // Generate report from MonitorCommand
+        final String[] reportLines = MonitorCommand.generateReport(monitorSubcommand);
+
+        // Convert legacy § codes to Adventure components and send
+        for (final String line : reportLines) {
+            sender.sendMessage(LEGACY_SERIALIZER.deserialize(line));
+        }
+
+        return true;
+    }
+
+    /**
+     * Execute /survivalcore preset <conservative|balanced|aggressive|potato>
+     */
+    private boolean executePreset(final CommandSender sender, final String[] args) {
+        if (args.length < 2) {
+            sender.sendMessage(
+                Component.text("Usage: ", NamedTextColor.RED)
+                    .append(Component.text("/survivalcore preset <conservative|balanced|aggressive|potato>", NamedTextColor.GRAY))
+            );
+            sender.sendMessage(Component.empty());
+            sender.sendMessage(Component.text("Available presets:", NamedTextColor.GOLD));
+            for (final PresetManager.Preset preset : PresetManager.Preset.values()) {
+                sender.sendMessage(
+                    Component.text("  • ", NamedTextColor.DARK_GRAY)
+                        .append(Component.text(preset.id, NamedTextColor.YELLOW))
+                        .append(Component.text(": ", NamedTextColor.DARK_GRAY))
+                        .append(Component.text(preset.description, NamedTextColor.GRAY))
+                );
+            }
+            return true;
+        }
+
+        final String presetName = args[1];
+        final PresetManager.Preset preset = PresetManager.fromString(presetName);
+
+        if (preset == null) {
+            sender.sendMessage(
+                Component.text("Unknown preset: ", NamedTextColor.RED)
+                    .append(Component.text(presetName, NamedTextColor.GOLD))
+            );
+            sender.sendMessage(
+                Component.text("Available: conservative, balanced, aggressive, potato", NamedTextColor.GRAY)
+            );
+            return true;
+        }
+
+        // Apply the preset to the configuration file
+        sender.sendMessage(
+            Component.text("Applying preset: ", NamedTextColor.YELLOW)
+                .append(Component.text(preset.id, NamedTextColor.GOLD, TextDecoration.BOLD))
+                .append(Component.text("...", NamedTextColor.YELLOW))
+        );
+
+        final boolean success = PresetManager.applyPreset(SurvivalCore.getServerRoot(), preset);
+
+        if (!success) {
+            sender.sendMessage(
+                Component.text("Failed to apply preset. Check console for errors.", NamedTextColor.RED)
+            );
+            return true;
+        }
+
+        // Reload the configuration to apply changes
+        SurvivalCore.reload(SurvivalCore.getServerRoot());
+
+        sender.sendMessage(
+            Component.text("✓ ", NamedTextColor.GREEN, TextDecoration.BOLD)
+                .append(Component.text("Preset applied successfully!", NamedTextColor.GREEN))
+        );
+        sender.sendMessage(
+            Component.text("Configuration reloaded. Some changes may require a server restart.", NamedTextColor.GRAY)
+        );
+
+        return true;
+    }
