+    /**
+     * Execute /survivalcore reload
+     */
+    private boolean executeReload(final CommandSender sender) {
+        sender.sendMessage(
+            Component.text("Reloading ", NamedTextColor.YELLOW)
+                .append(Component.text("SurvivalCore", NamedTextColor.GOLD, TextDecoration.BOLD))
+                .append(Component.text(" configuration...", NamedTextColor.YELLOW))
+        );
+
+        try {
+            SurvivalCore.reload(SurvivalCore.getServerRoot());
+
+            sender.sendMessage(
+                Component.text("✓ ", NamedTextColor.GREEN, TextDecoration.BOLD)
+                    .append(Component.text("Configuration reloaded successfully!", NamedTextColor.GREEN))
+            );
+            sender.sendMessage(
+                Component.text("Some changes may require a server restart to take full effect.", NamedTextColor.GRAY)
+            );
+        } catch (Exception e) {
+            sender.sendMessage(
+                Component.text("✗ ", NamedTextColor.RED, TextDecoration.BOLD)
+                    .append(Component.text("Failed to reload configuration!", NamedTextColor.RED))
+            );
+            sender.sendMessage(
+                Component.text("Error: ", NamedTextColor.DARK_RED)
+                    .append(Component.text(e.getMessage(), NamedTextColor.RED))
+            );
+        }
+
+        return true;
+    }
