+    /**
+     * Register the /survivalcore command with the server.
+     * Called from CraftServer during initialization.
+     */
+    public static void registerCommand(final MinecraftServer server) {
+        server.server.getCommandMap().register("survivalcore", "SurvivalCore", new SurvivalCoreCommand("survivalcore"));
+        java.util.logging.Logger.getLogger("SurvivalCore").info("Registered /survivalcore command (aliases: /sc)");
+    }
