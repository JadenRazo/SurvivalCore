+    @Override
+    public boolean execute(
+        final @NonNull CommandSender sender,
+        final @NonNull String commandLabel,
+        final @NonNull String[] args
+    ) {
+        if (args.length == 0) {
+            sendUsage(sender);
+            return true;
+        }
+
+        final String subcommand = args[0].toLowerCase(Locale.ENGLISH);
+
+        switch (subcommand) {
+            case "monitor" -> {
+                if (!checkPermission(sender, PermissionNodes.MONITOR)) return true;
+                return executeMonitor(sender, args);
+            }
+            case "preset" -> {
+                if (!checkPermission(sender, PermissionNodes.PRESET)) return true;
+                return executePreset(sender, args);
+            }
+            case "reload" -> {
+                if (!checkPermission(sender, PermissionNodes.RELOAD)) return true;
+                return executeReload(sender);
+            }
+            case "version" -> {
+                if (!checkPermission(sender, PermissionNodes.VERSION)) return true;
+                return executeVersion(sender);
+            }
+            case "profile" -> {
+                if (!checkPermission(sender, PermissionNodes.PROFILE)) return true;
+                return executeProfile(sender, args);
+            }
+            case "lagspike" -> {
+                if (!checkPermission(sender, PermissionNodes.LAGSPIKE)) return true;
+                return executeLagspike(sender);
+            }
+            default -> {
+                sender.sendMessage(
+                    Component.text("Unknown subcommand: ", NamedTextColor.RED)
+                        .append(Component.text(subcommand, NamedTextColor.GOLD))
+                );
+                sendUsage(sender);
+                return true;
+            }
+        }
+    }
