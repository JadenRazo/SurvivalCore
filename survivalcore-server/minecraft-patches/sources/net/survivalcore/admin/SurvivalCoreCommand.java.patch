+    /**
+     * Execute /survivalcore lagspike
+     */
+    private boolean executeLagspike(final CommandSender sender) {
+        if (!PerformanceMonitor.isEnabled()) {
+            sender.sendMessage(
+                Component.text("Performance monitoring is disabled", NamedTextColor.RED)
+            );
+            return true;
+        }
+
+        final PerformanceMonitor monitor = PerformanceMonitor.get();
+        final PerformanceMonitor.LagSpikeData[] lagspikes = monitor.getLagspikes();
+
+        if (lagspikes == null || lagspikes.length == 0) {
+            sender.sendMessage(
+                Component.text("No lagspikes recorded yet", NamedTextColor.GRAY)
+            );
+            return true;
+        }
+
+        sender.sendMessage(Component.empty());
+        sender.sendMessage(
+            Component.text("Recent Lagspikes", NamedTextColor.GOLD, TextDecoration.BOLD)
+        );
+        sender.sendMessage(Component.empty());
+
+        int shown = 0;
+        for (PerformanceMonitor.LagSpikeData spike : lagspikes) {
+            if (spike == null) continue;
+
+            sender.sendMessage(
+                Component.text("  • ", NamedTextColor.DARK_GRAY)
+                    .append(Component.text(String.format("%.1fms", spike.durationMs()), NamedTextColor.RED))
+                    .append(Component.text(" - ", NamedTextColor.DARK_GRAY))
+                    .append(Component.text(spike.cause(), NamedTextColor.YELLOW))
+                    .append(Component.text(" (tick ", NamedTextColor.DARK_GRAY))
+                    .append(Component.text(spike.tickNumber(), NamedTextColor.GRAY))
+                    .append(Component.text(")", NamedTextColor.DARK_GRAY))
+            );
+            shown++;
+        }
+
+        sender.sendMessage(Component.empty());
+        sender.sendMessage(
+            Component.text("Showing " + shown + " recent lagspikes", NamedTextColor.GRAY)
+        );
+
+        return true;
+    }
