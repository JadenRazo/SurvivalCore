+    /**
+     * Execute /survivalcore profile <cpu|memory|tick> [duration]
+     */
+    private boolean executeProfile(final CommandSender sender, final String[] args) {
+        if (args.length < 2) {
+            sender.sendMessage(
+                Component.text("Usage: ", NamedTextColor.RED)
+                    .append(Component.text("/survivalcore profile <cpu|memory|tick> [duration]", NamedTextColor.GRAY))
+            );
+            sender.sendMessage(
+                Component.text("Duration: 10-600 seconds (default: 60)", NamedTextColor.GRAY)
+            );
+            return true;
+        }
+
+        final String profileType = args[1].toLowerCase(Locale.ENGLISH);
+        int duration = 60; // default
+
+        if (args.length >= 3) {
+            try {
+                duration = Integer.parseInt(args[2]);
+                if (duration < 10 || duration > 600) {
+                    sender.sendMessage(
+                        Component.text("Duration must be between 10 and 600 seconds", NamedTextColor.RED)
+                    );
+                    return true;
+                }
+            } catch (NumberFormatException e) {
+                sender.sendMessage(
+                    Component.text("Invalid duration: ", NamedTextColor.RED)
+                        .append(Component.text(args[2], NamedTextColor.GOLD))
+                );
+                return true;
+            }
+        }
+
+        // Check Spark availability
+        if (!SparkIntegration.isAvailable()) {
+            sender.sendMessage(
+                Component.text("✗ ", NamedTextColor.RED, TextDecoration.BOLD)
+                    .append(Component.text("Spark profiler not available", NamedTextColor.RED))
+            );
+            sender.sendMessage(
+                Component.text("Falling back to /survivalcore monitor", NamedTextColor.GRAY)
+            );
+            return executeMonitor(sender, new String[]{"monitor"});
+        }
+
+        boolean started = false;
+        switch (profileType) {
+            case "cpu" -> {
+                started = SparkIntegration.startCpuProfile(duration);
+                if (started) {
+                    sender.sendMessage(
+                        Component.text("✓ ", NamedTextColor.GREEN, TextDecoration.BOLD)
+                            .append(Component.text("Started CPU profiler for ", NamedTextColor.GREEN))
+                            .append(Component.text(duration + "s", NamedTextColor.GOLD))
+                    );
+                }
+            }
+            case "tick" -> {
+                started = SparkIntegration.startTickProfile(duration);
+                if (started) {
+                    sender.sendMessage(
+                        Component.text("✓ ", NamedTextColor.GREEN, TextDecoration.BOLD)
+                            .append(Component.text("Started tick profiler for ", NamedTextColor.GREEN))
+                            .append(Component.text(duration + "s", NamedTextColor.GOLD))
+                    );
+                }
+            }
+            case "memory" -> {
+                sender.sendMessage(
+                    Component.text("Memory profiling not yet implemented", NamedTextColor.YELLOW)
+                );
+                return true;
+            }
+            default -> {
+                sender.sendMessage(
+                    Component.text("Unknown profile type: ", NamedTextColor.RED)
+                        .append(Component.text(profileType, NamedTextColor.GOLD))
+                );
+                sender.sendMessage(
+                    Component.text("Available types: cpu, tick, memory", NamedTextColor.GRAY)
+                );
+                return true;
+            }
+        }
+
+        if (!started) {
+            sender.sendMessage(
+                Component.text("✗ ", NamedTextColor.RED, TextDecoration.BOLD)
+                    .append(Component.text("Failed to start profiler", NamedTextColor.RED))
+            );
+            sender.sendMessage(
+                Component.text("Check console for errors", NamedTextColor.GRAY)
+            );
+        }
+
+        return true;
+    }
