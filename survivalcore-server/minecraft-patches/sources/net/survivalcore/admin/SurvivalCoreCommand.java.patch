+    @Override
+    public @NonNull List<String> tabComplete(
+        final @NonNull CommandSender sender,
+        final @NonNull String alias,
+        final @NonNull String[] args,
+        final @Nullable Location location
+    ) throws IllegalArgumentException {
+        if (args.length == 0) {
+            return List.of("monitor", "preset", "reload", "version", "profile", "lagspike");
+        }
+
+        if (args.length == 1) {
+            final String partial = args[0].toLowerCase(Locale.ENGLISH);
+            return List.of("monitor", "preset", "reload", "version", "profile", "lagspike").stream()
+                .filter(cmd -> cmd.startsWith(partial))
+                .toList();
+        }
+
+        final String subcommand = args[0].toLowerCase(Locale.ENGLISH);
+
+        if (subcommand.equals("monitor") && args.length == 2) {
+            final String partial = args[1].toLowerCase(Locale.ENGLISH);
+            return List.of("tps", "entities", "farms", "threads").stream()
+                .filter(sub -> sub.startsWith(partial))
+                .toList();
+        }
+
+        if (subcommand.equals("preset") && args.length == 2) {
+            final String partial = args[1].toLowerCase(Locale.ENGLISH);
+            return List.of("conservative", "balanced", "aggressive", "potato").stream()
+                .filter(preset -> preset.startsWith(partial))
+                .toList();
+        }
+
+        if (subcommand.equals("profile") && args.length == 2) {
+            final String partial = args[1].toLowerCase(Locale.ENGLISH);
+            return List.of("cpu", "memory", "tick").stream()
+                .filter(type -> type.startsWith(partial))
+                .toList();
+        }
+
+        return List.of();
+    }
