+/**
+ * Main command handler for /survivalcore.
+ *
+ * Provides subcommands for monitoring performance, managing presets,
+ * reloading configuration, and displaying version information.
+ *
+ * Pattern: Follows Paper's PaperCommand design with subcommand delegation.
+ */
+public final class SurvivalCoreCommand extends Command {
+
+    private static final LegacyComponentSerializer LEGACY_SERIALIZER =
+        LegacyComponentSerializer.legacySection();
+
+    public SurvivalCoreCommand(final String name) {
+        super(name);
+        this.description = "SurvivalCore management commands";
+        this.usageMessage = "/survivalcore <monitor|preset|reload|version|profile|lagspike>";
+        this.setAliases(List.of("sc"));
+
+        // Register all permissions
+        final List<String> permissions = List.of(
+            PermissionNodes.BASE,
+            PermissionNodes.MONITOR,
+            PermissionNodes.PRESET,
+            PermissionNodes.RELOAD,
+            PermissionNodes.VERSION,
+            PermissionNodes.PROFILE,
+            PermissionNodes.LAGSPIKE
+        );
+        this.setPermission(String.join(";", permissions));
+
+        // Add permissions to Bukkit with OP default
+        try {
+            final PluginManager pluginManager = Bukkit.getServer().getPluginManager();
+            for (final String perm : permissions) {
+                if (pluginManager.getPermission(perm) == null) {
+                    pluginManager.addPermission(new Permission(perm, PermissionDefault.OP));
+                }
+            }
+        } catch (Exception e) {
+            // Permissions will still work via OP status even if registration fails
+        }
+    }
