+    private static Command muteCommand() {
+        return new Command("mute", "Mute a player", "/mute <player> [duration]", List.of()) {
+            {
+                setPermission(PermissionNodes.MUTE);
+            }
+
+            @Override
+            public boolean execute(final @NonNull CommandSender sender, final @NonNull String label, final @NonNull String[] args) {
+                if (!testPermission(sender)) return true;
+
+                if (args.length < 1) {
+                    sender.sendMessage(
+                        Component.text("Usage: ", NamedTextColor.RED)
+                            .append(Component.text("/mute <player> [duration]", NamedTextColor.GRAY))
+                    );
+                    return true;
+                }
+
+                final Player target = Bukkit.getPlayer(args[0]);
+                if (target == null) {
+                    sender.sendMessage(
+                        Component.text("Player not found: ", NamedTextColor.RED)
+                            .append(Component.text(args[0], NamedTextColor.GOLD))
+                    );
+                    return true;
+                }
+
+                final long expiryTime;
+                final String durationDisplay;
+
+                if (args.length > 1) {
+                    final long durationMillis = parseDuration(args[1]);
+                    if (durationMillis == -1L) {
+                        sender.sendMessage(Component.text("Invalid duration format. Use: 10s, 5m, 1h, 1d", NamedTextColor.RED));
+                        return true;
+                    }
+                    expiryTime = System.currentTimeMillis() + durationMillis;
+                    durationDisplay = " for " + args[1];
+                } else {
+                    expiryTime = -1L;
+                    durationDisplay = " permanently";
+                }
+
+                AdminCommands.getMutedPlayers().put(target.getUniqueId(), expiryTime);
+
+                target.sendMessage(
+                    Component.text("You have been muted" + durationDisplay + ".", NamedTextColor.RED)
+                );
+                sender.sendMessage(
+                    Component.text("✓ ", NamedTextColor.GREEN)
+                        .append(Component.text("Muted ", NamedTextColor.YELLOW))
+                        .append(Component.text(target.getName(), NamedTextColor.GOLD))
