+    /**
+     * Parse duration string (e.g., "10s", "5m", "1h", "1d") to milliseconds.
+     * Returns -1 if invalid format.
+     */
+    private static long parseDuration(final String input) {
+        if (input == null || input.isEmpty()) return -1L;
+
+        final char unit = input.charAt(input.length() - 1);
+        final String numberPart = input.substring(0, input.length() - 1);
+
+        final long value;
+        try {
+            value = Long.parseLong(numberPart);
+        } catch (NumberFormatException e) {
+            return -1L;
+        }
+
+        return switch (unit) {
+            case 's', 'S' -> value * 1000L;
+            case 'm', 'M' -> value * 60L * 1000L;
+            case 'h', 'H' -> value * 60L * 60L * 1000L;
+            case 'd', 'D' -> value * 24L * 60L * 60L * 1000L;
+            default -> -1L;
+        };
+    }
