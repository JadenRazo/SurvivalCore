+
+public final class PlayerCommands {
+
+    private PlayerCommands() {}
+
+    public static int register(final SimpleCommandMap map) {
+        map.register("survivalcore", healCommand());
+        map.register("survivalcore", feedCommand());
+        map.register("survivalcore", flyCommand());
+        map.register("survivalcore", godCommand());
+        map.register("survivalcore", speedCommand());
