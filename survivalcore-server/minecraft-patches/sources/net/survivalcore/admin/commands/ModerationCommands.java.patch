+    private static Command vanishCommand() {
+        return new Command("vanish", "Toggle vanish mode", "/vanish [player]", List.of("v")) {
+            {
+                setPermission(PermissionNodes.VANISH);
+            }
+
+            @Override
+            public boolean execute(final @NonNull CommandSender sender, final @NonNull String label, final @NonNull String[] args) {
+                if (!testPermission(sender)) return true;
+
+                final Player target = PlayerCommands.resolveTarget(sender, args);
+                if (target == null) return true;
+
+                final UUID uuid = target.getUniqueId();
+                final boolean vanishing;
+
+                if (AdminCommands.getVanishedPlayers().contains(uuid)) {
+                    AdminCommands.getVanishedPlayers().remove(uuid);
+                    vanishing = false;
+                    // Show to all players
+                    for (final Player online : Bukkit.getOnlinePlayers()) {
+                        online.showPlayer(AdminCommands.getPluginRef(), target);
+                    }
+                } else {
+                    AdminCommands.getVanishedPlayers().add(uuid);
+                    vanishing = true;
+                    // Hide from all non-vanish-permission players
+                    for (final Player online : Bukkit.getOnlinePlayers()) {
+                        if (!online.hasPermission(PermissionNodes.VANISH) && !online.equals(target)) {
+                            online.hidePlayer(AdminCommands.getPluginRef(), target);
+                        }
+                    }
+                }
+
+                final String state = vanishing ? "enabled" : "disabled";
+                target.sendMessage(
+                    Component.text("✓ ", NamedTextColor.GREEN)
+                        .append(Component.text("Vanish " + state + ".", NamedTextColor.YELLOW))
+                );
+                if (!target.equals(sender)) {
+                    sender.sendMessage(
+                        Component.text("✓ ", NamedTextColor.GREEN)
+                            .append(Component.text("Vanish " + state + " for ", NamedTextColor.YELLOW))
+                            .append(Component.text(target.getName(), NamedTextColor.GOLD))
+                    );
+                }
+                return true;
+            }
+
+            @Override
+            public @NonNull List<String> tabComplete(final @NonNull CommandSender sender, final @NonNull String alias, final @NonNull String[] args, final @Nullable Location location) {
+                return args.length == 1 ? PlayerCommands.matchPlayers(args[0]) : List.of();
+            }
+        };
+    }
